name: Convert Images and Deploy to GitHub Pages

on:
  push:
    branches:
      - main

jobs:
  convert:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Install ImageMagick
        run: sudo apt-get install -y imagemagick libavif-dev

      - name: Convert images to AVIF
        run: |
          find . -iname '*.png' -o -iname '*.jpg' -o -iname '*.jpeg' -o -iname '*.webp' | while read file; do
            convert "$file" -strip -quality 85 "${file%.*}.avif" && rm "$file"
          done

      - name: Commit changes
        run: |
          git config --local user.email "enochkang9171@gmail.com"
          git config --local user.name "donnie9171"
          git add .
          git commit -m "Convert images to AVIF" || echo "No changes to commit"
          git push

  deploy:
    runs-on: ubuntu-latest
    needs: convert  # This ensures the deploy job runs after the convert job
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    steps:
      - name: Checkout
        uses: actions/checkout@v4
      - name: Setup Pages
        uses: actions/configure-pages@v5
      - name: Upload artifact
        uses: actions/upload-pages-artifact@v3
        with:
          # Upload entire repository
          path: '.'
      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v4
